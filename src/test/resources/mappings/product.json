{
  "settings": {
    "index": {
      "analysis": {
        "analyzer": {
          "default": {
            "char_filter": [
              "remove_number"
            ],
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "french_elision",
              "stopwords_french",
              "french_stemmer",
              "synonym_filter"
            ]
          },
          "product_id": {
            "char_filter": [
              "remove_letter"
            ],
            "tokenizer": "standard",
            "filter": [
              "lowercase"
            ]
          },
          "without_filter": {
            "tokenizer": "standard"
          }
        },
        "char_filter": {
          "remove_number": {
            "type": "pattern_replace",
            "pattern": "(\\D+)([0-9\\s\\.,]*)",
            "replacement": "$1",
            "flags": "CASE_INSENSITIVE"
          },
          "remove_letter": {
            "type": "pattern_replace",
            "pattern": "(\\D+)([0-9\\s\\.,]*)",
            "replacement": "$2",
            "flags": "CASE_INSENSITIVE"
          }
        },
        "filter": {
          "synonym_filter": {
            "type": "synonym",
            "synonyms_path": "synonymes.txt"
          },
          "french_elision": {
            "type": "elision",
            "articles_case": true,
            "articles": [
              "l",
              "d"
            ]
          },
          "french_stemmer" : {
            "type" : "stemmer",
            "name" : "light_french"
          },
          "stopwords_french": {
            "type": "stop",
            "stopwords": "_french_"
          }
        }
      }
    }
  }
}
